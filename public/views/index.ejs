Home page - all resources
Route: /
Data required:
%>

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>All Resources</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.1.0/css/bulma.min.css">
  <% include partials/_includes %>
</head>

<body>
   <header>
     <div class='header-wrapper'>
       <% include partials/_nav %>
       <% include partials/_search_bar %>
     </div>
  </header>


  <div class='nav-and-search-bar'>
    <br />
  </div>

  <main class='main-content-wrapper'>
    <% for (var resource in resources) { %>
      <article class="card box">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="http://placehold.it/300x225" alt="">
          </figure>
        </div>

        <div class="card-content">
          <h1><%=resources[resource].title%></h1>
          <div class="content">
            <span class="tag is-dark"><%=resources[resource].topic%></span>
            <strong class="timestamp"><%=resources[resource].date_created.toLocaleDateString()%></strong>
          </div>
        </div>
      </article>
    <% } %>
  </main>

  <footer>
    <% include partials/_footer %>
  </footer>

</body>
</html>
