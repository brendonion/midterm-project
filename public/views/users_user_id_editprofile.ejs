<%#
Edit profile page
Route: /users/:user_id/editprofile
Data required:
%>

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Edit Profile</title>
    <% include partials/_includes %>
  </head>
  <body>
    <header>
      <% include partials/_nav %>
    </header>
    <div class="user_credentials">
    <p>
      Username: <%= user.username %>
    </p>
    <p>
      Email: <%= user.email %>
    </p>
    <p>
      Password: <%= user.password %>
    </p>
    </div>
    <form method='POST' action='/users/:user_id/editprofile' style='display:inline-block'>
      <input type='password' name='password' placeholder='insert new password'>
      <input type='submit' value='Update'>
    </form>

    <footer>
      <% include partials/_footer %>
    </footer>
  </body>
</html>
